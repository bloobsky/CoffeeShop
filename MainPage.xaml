<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeeShop.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="20"
            Padding="20"
            VerticalOptions="Center">

            <Image
                Source="logo.png"
                SemanticProperties.Description="Eco Cafteria"
                HorizontalOptions="Center"/>

            <Label
                Text="Welcome to Eco Cafeteria"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>

            <Label
                Text="Since opening in 1996 Eco Cafteria has become famous for its great food and friendly staff. An exciting menu of new food ideas from around the world, all prepared with the finest local ingredients. Homemade desserts and freshly roasted coffee."
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
